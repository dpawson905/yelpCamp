<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Add New Comment to <%=campground.name%></h1>
    <div class="form-size">
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <label for="comment">New Comment</label>
                <textarea id="comment" class="form-control" type=text name="comment[text]" placeholder="text"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="btn btn-sm btn-success" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>